<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="DialogActivity" parent="android:Theme.Dialog">
	    <item name="android:windowBackground">@drawable/dialog_full_holo_dark</item>
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:windowNoTitle">false</item>
	    <!-- <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item> -->
	</style>
	
    <style name="DialogFloating" parent="android:Theme.Dialog">
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:backgroundDimEnabled">false</item>
	    <item name="android:windowBackground">@color/transparent</item>
	    <item name="android:windowContentOverlay">@null</item>
	</style>
	
    <style name="Scroller">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dialog_datetime_slider_back</item>
        <item name="android:layout_margin">3dp</item>
    </style>
</resources>